@model HikeAndBike.Domain.DTO.AddTrailToShoppingCartDto

@{ 
    ViewData["Title"] = "Add Trail to Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Add Selected Trail to Shopping Cart:</h1>

<hr />

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddTrailToShoppingCart" method="post">
            <input type="hidden" asp-for="TrailId" />
            <div class="form-group">
                <label asp-for="SelectedTrail.Name"></label>
                <input disabled asp-for="SelectedTrail.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
