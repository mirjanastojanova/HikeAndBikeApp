@model List<HikeAndBike.Domain.Domain.Trail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container">

        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];

            if (i % 3 == 0)
            {
                @:<div class="row">
                }

                <div class="col-md-3 m-4">
                    <div class="card" style="width: 18rem; height: 35rem; margin: auto">
                        <img class="card-img-top" src="@item.Image" alt="Trail image" style="height: 50%">
                        <div class="card-body">
                            <h3 class="card-title">@item.Name</h3>
                            <p class="card-text"><b>Length:</b> @item.Length km</p>
                            <p class="card-text"><b>Guide:</b> @item.Guide</p>
                        </div>
                        <div class="card-footer">
                            <p class="card-text"><b>Price: @item.Price MKD</b></p>
                            <a asp-controller="Trails" asp-action="AddTrailToShoppingCart" asp-route-id="@item.Id" class="btn btn-primary">Add to Cart</a>
                            <a asp-controller="Trails" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                        </div>
                    </div>
                </div>

                if (i % 3 == 2)
                {
                @:</div>
            }
        }
    </div>