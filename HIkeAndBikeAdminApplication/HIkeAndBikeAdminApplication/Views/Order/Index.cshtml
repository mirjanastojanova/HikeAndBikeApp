@model List<HIkeAndBikeAdminApplication.Models.Order>

<div class="container">

    <div class="row">
        <a asp-controller="Order"
           asp-action="ExportOrders" class="btn btn-light">
            Export Orders
        </a>
    </div>

    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Costumer Details</th>
                <th scope="col">Number of products</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                var item = Model[i];

            <tr>
                <th scope="row">@(i+1)</th>
                <td>@item.User.Email</td>
                <td>@item.TrailInOrders.Count()</td>
                <td>
                    <a asp-route-id="@item.Id" asp-controller="Order"
                       asp-action="Details" class="btn btn-info">
                        Details
                    </a>
                </td>
                <td>
                    <a asp-route-id="@item.Id" asp-controller="Order"
                       asp-action="CreateInvoice" class="btn btn-info">
                        Create Invoice
                    </a>
                </td>
                <td></td>
            </tr>
            }
        </tbody>
    </table>

</div>
