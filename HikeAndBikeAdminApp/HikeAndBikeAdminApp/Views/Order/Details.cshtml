@model HikeAndBikeAdmin.Domain.Domain.Order

<div class="container">

    <blockquote class="blockquote">
        <p class="mb-0">Order details for: @Model.User.UserName</p>
    </blockquote>

        @for (int i = 0; i < Model.TrailInOrders.Count(); i++)
        {
            var item = Model.TrailInOrders.ElementAt(i).SelectedTrail;

            if (i % 3 == 0)
            {
                @:<div class="row">
                }

                <div class="col-md-3 m-4">
                    <div class="card" style="width: 18rem; height: 30rem;">
                        <img class="card-img-top" style="height: 70%" src="@item.Image" alt="Card image cap">
                        <div class="card-body">
                            <h3>@item.Name</h3>
                            <p>@item.Description</p>
                        </div>

                    </div>
                </div>

                if (i % 3 == 2)
                {
                @:</div>
            }

        }
</div>
